<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="450" Width="1000">


    <Window.Resources>

        <Style x:Key="ControlBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Blue"></Setter>
            <Setter Property="Margin" Value="5px"></Setter>
            <Setter Property="Width" Value="50"></Setter>
            <Setter Property="Height" Value="25"></Setter>
        </Style>
        <Style x:Key="PanelBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
            <Setter Property="Margin" Value="2px"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style x:Key="TrackNameStyle" TargetType="Button">
            <Setter Property="Background" Value="Gainsboro"></Setter>
            <Setter Property="FontSize" Value="18px"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Width" Value="Auto"></Setter>
            <Setter Property="Height" Value="30px"></Setter>
            <Setter Property="Margin" Value="1px"></Setter>
            <Setter Property="BorderBrush" Value="Gainsboro"></Setter>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Gainsboro"></Setter>
            
        </Style>
    </Window.Resources>
    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel>
                <Menu VerticalAlignment="Top">
                    <MenuItem Header="File" FontSize="16"></MenuItem>
                    <MenuItem Header="Settings" FontSize="16"></MenuItem>
                    <MenuItem Header="Themes" FontSize="16"></MenuItem>
                    <MenuItem Header="Hotkeys" FontSize="16"></MenuItem>
                    <MenuItem Header="About" FontSize="16"></MenuItem>
                </Menu>

                <StackPanel Orientation="Horizontal" Height="30"
                            VerticalAlignment="Bottom">
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <MediaElement x:Name="player"
                                  LoadedBehavior="Manual" UnloadedBehavior="Close"
                                  MediaOpened="player_MediaOpened" MediaEnded="player_MediaEnded"
                              Height="0" Width="0"/>
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel>
                    <Label x:Name="PausedLabel" HorizontalAlignment="Center" FontSize="28px" Visibility="Hidden">(Paused)</Label>


                    <Label HorizontalAlignment="Center" FontSize="28px"
                           x:Name="CurrentTrack">
                        CurrentTrack
                    </Label>

                    
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" FontSize="14" Margin="5px"> 
                            0:01 / 1:16:22
                        </TextBlock>
                        <TextBlock DockPanel.Dock="Right" FontSize="14" Margin="5px">
                            time left: 1:16:21
                        </TextBlock>
                    </DockPanel>
                    <Slider Margin="5px">
                        
                    </Slider>


                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="LoopBtn" Click="LoopBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Loop
                        </Button>
                        <Button x:Name="ReplayBtn" Click="ReplayBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Replay
                        </Button>
                        <Button x:Name="Previous" Click="Previous_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            &lt; &lt;
                        </Button>
                        <Button x:Name="StopBtn" Click="StopBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Stop
                        </Button>
                        <Button x:Name="PlayBtn" Click="PlayBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Play
                        </Button>
                        <Button x:Name="PauseBtn" Click="PauseBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Pause
                        </Button>
                        <Button x:Name="Next" Click="Next_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            &gt; &gt;
                        </Button>

                        <DockPanel>
                            <Slider x:Name="Volume" Minimum="0" Maximum="100" Width="100"
                                 TickPlacement="BottomRight"
                                 TickFrequency="10" DockPanel.Dock="Left">

                            </Slider>
                            <TextBox DockPanel.Dock="Right">
                                100
                            </TextBox>
                        </DockPanel>
                    </StackPanel>

                    <!-- is it not working because it is inside another stack panel?-->
                    <ScrollViewer Margin="10" VerticalScrollBarVisibility="Visible"
                                  HorizontalAlignment="Center" MaxHeight="450">
                        <StackPanel HorizontalAlignment="Center" Margin="10px" MaxHeight="450"
                                    x:Name="Tracklist">
                            <DockPanel>
                                <TextBlock FontSize="18" VerticalAlignment="Center" FontStyle="Italic">1</TextBlock>
                                <Button Style="{StaticResource TrackNameStyle}">
                                    hello
                                </Button>
                            </DockPanel>

                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel>
                    <DockPanel>
                        <Label>Dir</Label>
                        <TextBox x:Name="Dir" VerticalAlignment="Center" LostFocus="Dir_LostFocus">
                            C:\Users\danii\Desktop\target
                        </TextBox>
                    </DockPanel>
                    <DockPanel>
                        <Label VerticalAlignment="Center">Autoscan</Label>
                        <CheckBox VerticalAlignment="Center"></CheckBox>
                    </DockPanel>
                    <DockPanel>
                        <Label>Speed</Label>
                        <TextBox VerticalAlignment="Center">0.75</TextBox>
                    </DockPanel>
                    <DockPanel>
                        <Label>Search</Label>
                        <TextBox VerticalAlignment="Center" Foreground="Silver">Search tracks by name here...</TextBox>
                    </DockPanel>
                    <Slider Maximum="100" Width="120" Margin="10" TickPlacement="BottomRight" TickFrequency="25">
                        
                    </Slider>
                </StackPanel>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
