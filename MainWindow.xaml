<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="450" Width="1000">


    <Window.Resources>

        <Style x:Key="ControlBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Blue"></Setter>
            <Setter Property="Margin" Value="5px"></Setter>
            <Setter Property="Width" Value="50"></Setter>
            <Setter Property="Height" Value="25"></Setter>
        </Style>
        <Style x:Key="PanelBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
            <Setter Property="Margin" Value="2px"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style x:Key="TrackNameStyle" TargetType="Button">
            <Setter Property="Background" Value="Gainsboro"></Setter>
            <Setter Property="FontSize" Value="18px"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Height" Value="30px"></Setter>
            <Setter Property="BorderBrush" Value="Gainsboro"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="TrackIndexStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="Height" Value="48px"></Setter>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Gainsboro"></Setter>
        </Style>
        <Style x:Key="CurrentTrackStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Gainsboro"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
        </Style>
    </Window.Resources>
    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <DockPanel LastChildFill="False">
                <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
                    <MenuItem Header="File" FontSize="16"></MenuItem>
                    <MenuItem Header="Settings" FontSize="16"></MenuItem>
                    <MenuItem Header="Themes" FontSize="16"></MenuItem>
                    <MenuItem Header="Hotkeys" FontSize="16"></MenuItem>
                    <MenuItem Header="About" FontSize="16"></MenuItem>
                </Menu>

                <StackPanel Orientation="Horizontal" Height="30"
                           DockPanel.Dock="Top">
                    <Button>
                        <Image Source="./Icons/OpenIcon.png"></Image>
                    </Button>
                </StackPanel>
            </DockPanel>
            
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <MediaElement x:Name="player"
                                  LoadedBehavior="Manual" UnloadedBehavior="Close"
                                  MediaOpened="player_MediaOpened" MediaEnded="player_MediaEnded"
                              Height="0" Width="0"/>
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel>
                    <Label x:Name="Status" HorizontalAlignment="Center" FontSize="28px" Visibility="Hidden"></Label>



                    <TextBox HorizontalAlignment="Center" FontSize="28px" IsReadOnly="True"
                           x:Name="CurrentTrack" Style="{StaticResource CurrentTrackStyle}">
                        CurrentTrack
                    </TextBox>

                    
                    <DockPanel LastChildFill="False">
                        <DockPanel LastChildFill="False">
                            <!-- change to TextBox to copy and set the position -->
                            <TextBox DockPanel.Dock="Left" FontSize="14" Margin="5px"
                                       x:Name="Position" Text="{Binding CurrentPosition, UpdateSourceTrigger=PropertyChanged}" Width="120"
                                     IsReadOnly="True" Background="Gainsboro" Foreground="Black" BorderThickness="0"> 
                            </TextBox>
                            <TextBlock VerticalAlignment="Center">/</TextBlock>
                            <TextBlock DockPanel.Dock="Right" FontSize="14" Margin="5px"
                                       x:Name="Duration"> 
                            NaturalDuration
                            </TextBlock>
                        </DockPanel>

                        <TextBlock DockPanel.Dock="Right" FontSize="14" Margin="5px">
                            time left: 1:16:21
                        </TextBlock>
                    </DockPanel>
                    <Slider Margin="5px">
                        
                    </Slider>


                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="LoopBtn" Click="LoopBtn_Click"
                                Style="{StaticResource ControlBtnStyle}" Background="Red">
                            loop OFF
                        </Button>
                        <Button x:Name="ReplayBtn" Click="ReplayBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            <Image Source="./Icons/ReplayIcon.png"></Image>
                        </Button>
                        <Button x:Name="PrevBtn" Click="PrevBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            <Image Source="./Icons/PrevIcon.png"></Image>
                        </Button>
                        <Button x:Name="StopBtn" Click="StopBtn_Click" 
                                Style="{StaticResource ControlBtnStyle}">
                            <Image Source="./Icons/StopIcon.png"></Image>
                        </Button>
                        <Button x:Name="PlayPauseBtn" Click="PlayPauseBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            <Image Source="./Icons/PlayIcon.png"></Image>
                        </Button>
                        <Button x:Name="NextBtn" Click="NextBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            <Image Source="./Icons/NextIcon.png"></Image>
                        </Button>

                        <DockPanel>
                            <TextBox DockPanel.Dock="Right" x:Name="CurrentVolume" IsReadOnly="True"
                                     Width="40" TextAlignment="Right"
                                     Text="{Binding ElementName=Volume, Path=Value, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>
                            <Button x:Name="MuteBtn" Click="MuteBtn_Click"
                                    Style="{StaticResource PanelBtnStyle}" FontSize="10"
                                    Width="40" Height="25" Background="Blue"
                                    VerticalAlignment="Center">
                                <Image Source="./Icons/MuteIcon.png"></Image>
                            </Button>
                            <Slider x:Name="Volume" Minimum="0" Maximum="1" Value="0.5"
                                    Width="100" DockPanel.Dock="Left"
                                    Background="Blue" Margin="2" VerticalAlignment="Center"
                                    ValueChanged="Volume_ValueChanged">
                            </Slider>


                        </DockPanel>
                    </StackPanel>


                    <ScrollViewer>
                        <DockPanel x:Name="Tracklist" Margin="2">
                            <StackPanel x:Name="TrackIndexes" DockPanel.Dock="Left" VerticalAlignment="Center" Orientation="Vertical">
                                <Label Style="{StaticResource TrackIndexStyle}">1</Label>
                            </StackPanel>

                            <StackPanel x:Name="TrackNames" DockPanel.Dock="Right" VerticalAlignment="Center" Orientation="Vertical">
                                <Button VerticalAlignment="Center" Style="{StaticResource TrackNameStyle}">
                                    TRACK
                                </Button>
                            </StackPanel>
                        </DockPanel>
                    </ScrollViewer>
                    
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel>
                    <DockPanel>
                        <Label FontSize="18">Path</Label>
                        <TextBox x:Name="Dir" VerticalAlignment="Center" LostFocus="Dir_LostFocus" FontSize="18">
                            C:\Users\danii\Desktop\target\HT
                        </TextBox>
                    </DockPanel>
                    <DockPanel>
                        <Label VerticalAlignment="Center">Autoscan</Label>
                        <CheckBox VerticalAlignment="Center"></CheckBox>
                        <Label VerticalAlignment="Center">Sort</Label>
                        <CheckBox VerticalAlignment="Center"></CheckBox>
                    </DockPanel>

                    <Border Width="200" Height="50"
                            BorderBrush="Blue" BorderThickness="2">
                        <DockPanel Width="180">
                            <Button x:Name="ResetSpeedBtn" Click="ResetSpeedBtn_Click"
                                DockPanel.Dock="Left" HorizontalAlignment="Center"
                                Width="40" Height="20">
                                Reset
                            </Button>
                            <Slider Maximum="2" Minimum="0.1" Value="1"
                                Margin="10" x:Name="Speed"
                                VerticalAlignment="Center" Width="100"
                                ValueChanged="Speed_ValueChanged"></Slider>
                            <TextBox Width="20" Height="20" TextAlignment="Center" IsReadOnly="True"
                                Text="{Binding ElementName=Speed, Path=Value, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel>
                    </Border>

                    <DockPanel>
                        <Label>Search</Label>
                        <TextBox VerticalAlignment="Center" Foreground="Silver">Search tracks by name here...</TextBox>
                    </DockPanel>


                    <Border Width="140"
                            BorderBrush="Blue" BorderThickness="2">
                        <DockPanel Width="120">

                            <Label DockPanel.Dock="Left" VerticalAlignment="Center">L</Label>
                            <Label DockPanel.Dock="Right" VerticalAlignment="Center">R</Label>
                            <Button x:Name="ResetBalanceBtn" Click="ResetBalanceBtn_Click"
                                DockPanel.Dock="Bottom" HorizontalAlignment="Center"
                                Width="40">
                                Reset
                            </Button>
                            <Slider Maximum="1" Minimum="-1" Value="0"
                                Margin="10" x:Name="Balance"
                                VerticalAlignment="Center"
                                ValueChanged="Balance_ValueChanged"></Slider>
                        </DockPanel>
                    </Border>


                </StackPanel>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
