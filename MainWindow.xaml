<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="450" Width="800">


    <Window.Resources>

        <Style x:Key="ControlBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Blue"></Setter>
            <Setter Property="Margin" Value="5px"></Setter>
            <Setter Property="Width" Value="50"></Setter>
            <Setter Property="Height" Value="25"></Setter>
        </Style>
        <Style x:Key="PanelBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
            <Setter Property="Margin" Value="2px"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style x:Key="TrackNameStyle" TargetType="Label">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="FontSize" Value="18px"></Setter>
        </Style>
    </Window.Resources>
    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel>
                <Menu VerticalAlignment="Top">
                    <MenuItem Header="File" FontSize="16"></MenuItem>
                    <MenuItem Header="Settings" FontSize="16"></MenuItem>
                    <MenuItem Header="Themes" FontSize="16"></MenuItem>
                    <MenuItem Header="Hotkeys" FontSize="16"></MenuItem>
                    <MenuItem Header="About" FontSize="16"></MenuItem>
                </Menu>

                <StackPanel Orientation="Horizontal" Height="30"
                            VerticalAlignment="Bottom">
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                    <Button Style="{StaticResource PanelBtnStyle}"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel>
                    <MediaElement x:Name="player" Source="Music/03 - Somewhere I Belong.mp3"
                                  LoadedBehavior="Manual" UnloadedBehavior="Close"
                                  MediaOpened="player_MediaOpened"/>



                    <Label HorizontalAlignment="Center" FontSize="28px">Currently Playing:</Label>

                    <Label x:Name="PausedLabel" HorizontalAlignment="Center" FontSize="28px" Visibility="Hidden">(Paused)</Label>


                    <Label HorizontalAlignment="Center" FontSize="28px">track 1</Label>

                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" FontSize="14" Margin="5px"> 
                            0:01 / 1:16:22
                        </TextBlock>
                        <TextBlock DockPanel.Dock="Right" FontSize="14" Margin="5px">
                            time left: 1:16:21
                        </TextBlock>
                    </DockPanel>
                    <Slider Margin="5px">
                        
                    </Slider>


                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ReplayBtn"
                                Style="{StaticResource ControlBtnStyle}">
                            Replay
                        </Button>
                        <Button x:Name="Previous"
                                Style="{StaticResource ControlBtnStyle}">
                            &lt; &lt;
                        </Button>
                        <Button x:Name="StopBtn" Click="StopBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Stop
                        </Button>
                        <Button x:Name="PlayBtn" Click="PlayBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Play
                        </Button>
                        <Button x:Name="PauseBtn" Click="PauseBtn_Click"
                                Style="{StaticResource ControlBtnStyle}">
                            Pause
                        </Button>
                        <Button x:Name="Next"
                                Style="{StaticResource ControlBtnStyle}">
                            &gt; &gt;
                        </Button>

                        <DockPanel>
                            <Slider x:Name="Volume" Minimum="0" Maximum="100" Width="100"
                                 TickPlacement="BottomRight"
                                 TickFrequency="10" DockPanel.Dock="Left">

                            </Slider>
                            <TextBox DockPanel.Dock="Right">
                                100
                            </TextBox>
                        </DockPanel>
                    </StackPanel>

                    <!-- is it not working because it is inside another stack panel?-->
                    <ScrollViewer Margin="10" VerticalScrollBarVisibility="Visible"
                                  HorizontalAlignment="Center" >
                        <StackPanel HorizontalAlignment="Center" Margin="10px" Height="150">
                            <Label Style="{StaticResource TrackNameStyle}">track 1</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 2</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 3</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 4</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 5</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 6</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 7</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 8</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 9</Label>
                            <Label Style="{StaticResource TrackNameStyle}">track 10</Label>
                        </StackPanel>
                    </ScrollViewer>


                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Border BorderThickness="2px" BorderBrush="Black"></Border>
                <StackPanel Grid.Column="1">
                    <DockPanel>
                        <Label>Dir</Label>
                        <TextBox VerticalAlignment="Center">C:\Users\danii\Desktop</TextBox>
                    </DockPanel>
                    <DockPanel>
                        <Label VerticalAlignment="Center">Autoscan</Label>
                        <CheckBox VerticalAlignment="Center"></CheckBox>
                    </DockPanel>
                    <DockPanel>
                        <Label>Speed</Label>
                        <TextBox VerticalAlignment="Center">0.75</TextBox>
                    </DockPanel>
                    <DockPanel>
                        <Label>Search</Label>
                        <TextBox VerticalAlignment="Center" Foreground="Silver">Search tracks by name here...</TextBox>
                    </DockPanel>
                </StackPanel>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
